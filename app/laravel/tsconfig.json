{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@/*": ["resources/ts/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "resources/ts/**/*" // ここでTypeScriptファイルの対象を指定
  ],
  "exclude": ["node_modules", "public"]
}
